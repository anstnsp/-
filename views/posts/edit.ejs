<!-- views/posts/edit.ejs -->

<!DOCTYPE html>
<html>
 <head>
  <% include ../partials/header %>
 </head>
 <body>
  <% include ../partials/nav %>

  <div class="container post post-edit">
   <h2>게시판</h2>

   <div class="buttons">
    <a class="btn btn-default" href="/posts">Back</a>
   </div>

   <form class="post-form form-horizontal" action="/posts/<%= post._id %>?_method=put" method="post">
    <div class="contentBox">
     <h3 class="contentBoxTop">수정 페이지</h3>
     <fieldset>
      <div class="form-group">
       <label for="title" class="col-sm-2 control-label">제목</label>
       <div class="col-sm-10">
        <input class="form-control" type="text" id="title" name="title" value="<%= post.title %>">
       </div>
      </div>
      <div class="form-group">
       <label for="contents" class="col-sm-2 control-label">내용</label>
       <div class="col-sm-10">
        <textarea class="form-control" id="contents" name="contents" rows="5"><%= post.contents %></textarea>
       </div>
      </div>
     </fieldset>
    </div>
    <div class="buttons">
     <button type="submit" class="btn btn-default">Submit</button>
    </div>
   </form>

  </div> <!-- container end -->
 </body>
</html>